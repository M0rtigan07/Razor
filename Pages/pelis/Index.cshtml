@page
@model Razor.Pages.pelis.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Listado De Peliculas</h1>

<p>
    <a asp-page="Create">Agregar Pelicula</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Peli[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peli[0].FechaEstreno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peli[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peli[0].Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peli[0].Clasificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Peli) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstreno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clasificacion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
